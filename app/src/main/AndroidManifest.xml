<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.graphicsandanimationapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GraphicsAndAnimationApp">
        <activity
            android:name=".MainActivity"
            android:exported="true"> <!-- Додано атрибут exported -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShapeDrawableActivity" android:exported="false"></activity>
        <activity android:name=".CanvasActivity" android:exported="false"></activity>
        <activity android:name=".AnimationActivity" android:exported="false"></activity>
    </application>

</manifest>